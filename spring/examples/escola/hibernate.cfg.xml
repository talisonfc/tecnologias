<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/escola</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <mapping class="com.escola.model.Diretor"></mapping>
        <mapping class="com.escola.model.Secretario"></mapping>
        <mapping class="com.escola.model.Aluno"></mapping>
        <mapping class="com.escola.model.Professor"></mapping>
        <mapping class="com.escola.model.Endereco"></mapping>
        <mapping class="com.escola.model.Competencia"></mapping>
        <mapping class="com.escola.model.Matricula"></mapping>
        <mapping class="com.escola.model.Materia"></mapping>
        <mapping class="com.escola.model.Topico"></mapping>
        <mapping class="com.escola.model.Horario"></mapping>
        
    </session-factory>
</hibernate-configuration>